<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pomodoroLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_background"
    tools:context=".PomodoroActivity">

    <LinearLayout
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true">
        <TextView
            android:id="@+id/currentSoundText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŽµ Current Sound: Light Rain"
            android:textSize="16sp"
            android:textStyle="italic"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:id="@+id/soundControlLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <ImageButton
                android:id="@+id/switchSoundButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="12dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Switch Sound"
                android:src="@drawable/ic_switch_sound"
                android:tint="@color/black" />

            <ImageButton
                android:id="@+id/toggleSoundButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Toggle Sound"
                android:src="@drawable/ic_headphones"
                android:tint="@color/black" />
        </LinearLayout>

        <TextView
            android:id="@+id/taskTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pomodoro Time "
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="12dp" />

        <FrameLayout
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:layout_gravity="center_horizontal">


            <ProgressBar
                android:id="@+id/progressCircle"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:indeterminate="false"
                android:progress="100"
                android:max="100"
                android:rotation="-90"
                android:progressDrawable="@drawable/circular_progress_drawable" />

            <LinearLayout
                android:id="@+id/centerCircleContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/timerText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25:00"
                    android:textSize="36sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <Spinner
                    android:id="@+id/focusDurationSpinner"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:backgroundTint="@color/white"
                    android:padding="20dp" />
            </LinearLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/quoteText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You've got this! ðŸ’ª"
            android:textSize="16sp"
            android:textColor="@color/dark_gray"
            android:layout_marginTop="24dp" />

        <LinearLayout
            android:id="@+id/buttonContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/startButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start ðŸŽ¯"
                android:layout_margin="8dp" />

            <Button
                android:id="@+id/stopButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stop â¹ï¸"
                android:layout_margin="8dp" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
