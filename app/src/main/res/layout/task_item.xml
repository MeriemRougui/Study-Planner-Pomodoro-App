<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/task_item_background"
    android:layout_marginBottom="10dp"
    android:elevation="5dp">

    <TextView
        android:id="@+id/taskName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task Name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/taskDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task Description"
        android:textSize="16sp"
        android:textColor="#555"
        android:layout_marginBottom="12dp"/>

    <TextView
        android:id="@+id/dueDateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Due: -"
        android:textColor="#888888"
        android:textSize="15sp"
        android:layout_marginBottom="5dp"
        />

    <TextView
        android:id="@+id/pomodoroText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸŽ¯ Focus Sessions: 0"
        android:textColor="#808080"
        android:textSize="15sp"
        android:layout_marginTop="4dp"/>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_alignParentEnd="true">

        <Button
            android:id="@+id/editButton"
            android:text="Edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#D8B9E6"
            android:textColor="#FFF"/>

        <Button
            android:id="@+id/deleteButton"
            android:text="Delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#F7B7B7"
            android:textColor="#FFF"/>

        <Button
            android:id="@+id/toggleDoneButton"
            android:text="Done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#B8E1B8"
            android:textColor="#FFF"/>

        <Button
            android:id="@+id/focusButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFB6C1"
            android:text="Focus"
            android:layout_marginLeft="9dp"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</LinearLayout>
